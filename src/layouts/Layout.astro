---
import "@styles/globals.css";
import { Icon } from "astro-icon/components";
import { SEO } from "astro-seo";

interface Meta {
  title?: string;
  description?: string;
  image?: string;
}

interface Props {
  meta?: Meta;
}

const { meta } = Astro.props;
const title = meta?.title || "Czech Food Guide - Prague Restaurant Recommendations";
const description = meta?.description || "Discover the best traditional Czech restaurants and dishes in Prague";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" 
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" 
          crossorigin="" />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: meta?.image || "/og-image.jpg",
        }
      }}
    />
    <style>
      :root {
        --font-body: 'neo-grotesque', system-ui, sans-serif;
        --font-heading: 'transitional', Georgia, serif;
        --font-weight-body: 400;
        --font-weight-heading: 700;
        
        --primary-bg: 185 28 28; /* red-700 */
        --primary-fg: 255 255 255;
        --secondary-bg: 251 146 60; /* orange-400 */
        --secondary-fg: 255 255 255;
        --accent-bg: 251 191 36; /* amber-400 */
        --accent-fg: 0 0 0;
        --dark-bg: 17 24 39; /* gray-900 */
        --dark-fg: 255 255 255;
        --light-bg: 255 255 255;
        --light-fg: 17 24 39;
        
        --radius: 0.5rem;
        --border: 214.3 31.8% 91.4%;
        
        --content-max-width: 72rem;
        --breakout-max-width: 80rem;
        --padding-inline: 1rem;
      }
    </style>
  </head>
  <body class="min-h-screen bg-light text-light-foreground">
    <!-- Navigation -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
      <nav class="content-grid py-4">
        <div class="flex justify-between items-center">
          <a href="/" class="flex items-center gap-3 group">
            <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center group-hover:bg-primary/90 transition">
              <Icon name="beer" class="w-6 h-6 text-white" />
            </div>
            <span class="font-heading text-2xl font-bold">Czech Food Guide</span>
          </a>
          
          <div class="hidden md:flex items-center gap-8">
            <a href="/#restaurants" class="font-medium hover:text-primary transition">Restaurants</a>
            <a href="/#map" class="font-medium hover:text-primary transition">Map</a>
            <a href="/#dishes" class="font-medium hover:text-primary transition">Traditional Dishes</a>
          </div>
          
          <!-- Mobile menu button -->
          <button class="md:hidden p-2">
            <Icon name="menu" class="w-6 h-6" />
          </button>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-dark-foreground mt-20">
      <div class="content-grid py-16">
        <div class="grid md:grid-cols-3 gap-12">
          <div>
            <h3 class="font-heading text-2xl mb-4">Czech Food Guide</h3>
            <p class="text-dark-foreground/80">
              Your comprehensive guide to authentic Czech cuisine and the best restaurants in Prague.
            </p>
          </div>
          
          <div>
            <h4 class="font-heading text-xl mb-4">Quick Links</h4>
            <ul class="space-y-2 text-dark-foreground/80">
              <li><a href="/#restaurants" class="hover:text-white transition">Restaurants</a></li>
              <li><a href="/#map" class="hover:text-white transition">Interactive Map</a></li>
              <li><a href="/#dishes" class="hover:text-white transition">Traditional Dishes</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="font-heading text-xl mb-4">Popular Dishes</h4>
            <ul class="space-y-2 text-dark-foreground/80">
              <li>Svíčková (Beef Sirloin)</li>
              <li>Goulash</li>
              <li>Trdelník</li>
              <li>Smažený sýr (Fried Cheese)</li>
            </ul>
          </div>
        </div>
        
        <div class="border-t border-dark-foreground/20 mt-12 pt-8 text-center text-dark-foreground/60">
          <p>© 2024 Czech Food Guide. Made with ❤️ in Prague</p>
        </div>
      </div>
    </footer>
  </body>
</html>