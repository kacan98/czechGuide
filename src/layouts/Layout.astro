---
import "@styles/globals.css";
import { Icon } from "astro-icon/components";
import { SEO } from "astro-seo";
import LanguageSelector from "@components/LanguageSelector.vue";
import { useTranslations, getLangFromUrl, getLocalizedUrl } from "@/util/translate";

// Get current language from URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Meta {
  title?: string;
  description?: string;
  image?: string;
}

interface Props {
  meta?: Meta;
}

const { meta } = Astro.props;
const title = meta?.title || t("site.title");
const description =
  meta?.description || t("hero.subtitle");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
      integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
      crossorigin=""
    />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: meta?.image || "/og-image.jpg",
        },
      }}
    />
    <style>
      :root {
        --font-body: "neo-grotesque", system-ui, sans-serif;
        --font-heading: "transitional", Georgia, serif;
        --font-weight-body: 400;
        --font-weight-heading: 700;

        --primary-bg: 185 28 28; /* red-700 */
        --primary-fg: 255 255 255;
        --secondary-bg: 251 146 60; /* orange-400 */
        --secondary-fg: 255 255 255;
        --accent-bg: 251 191 36; /* amber-400 */
        --accent-fg: 0 0 0;
        --dark-bg: 17 24 39; /* gray-900 */
        --dark-fg: 255 255 255;
        --light-bg: 255 255 255;
        --light-fg: 17 24 39;

        --radius: 0.5rem;
        --border: 214.3 31.8% 91.4%;

        --content-max-width: 72rem;
        --breakout-max-width: 80rem;
        --padding-inline: 1rem;
      }
    </style>
  </head>
  <body class="min-h-screen bg-light text-light-foreground">
    <!-- Navigation -->
    <header
      class="sticky top-0 z-[9999] border-b border-gray-100 bg-white/95 backdrop-blur-sm"
    >
      <nav class="content-grid py-4">
        <div class="flex items-center justify-between">
          <a href={getLocalizedUrl("", lang)} class="group flex items-center gap-3">
            <div
              class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary transition group-hover:bg-primary/90"
            >
              üç∫
            </div>
            <span class="font-heading text-2xl font-bold"
              >{t("site.title")}</span
            >
          </a>

          <div class="hidden items-center gap-8 md:flex">
            <a href={getLocalizedUrl("dishes", lang)} class="font-medium transition hover:text-primary"
              >{t("buttons.whatToOrder")}</a
            >
            <a href={`${getLocalizedUrl("", lang)}#must-try`} class="font-medium transition hover:text-primary"
              >{t("buttons.myRecommendations")}</a
            >
            <a
              href={`${getLocalizedUrl("", lang)}#restaurants`}
              class="font-medium transition hover:text-primary">{t("buttons.myFavoriteSpots")}</a
            >
            <LanguageSelector currentPath={Astro.url.pathname} client:load />
          </div>

          <!-- Mobile menu button -->
          <button id="mobile-menu-btn" class="p-2 md:hidden">
            <Icon name="menu" class="h-6 w-6" />
          </button>
        </div>
      </nav>
    </header>

    <!-- Mobile menu panel (outside header to avoid z-index stacking issues) -->
    <div id="mobile-menu" class="hidden fixed inset-0 z-[99999] md:hidden" style="z-index: 99999 !important;">
      <div class="fixed inset-0 bg-black/50" id="mobile-menu-backdrop" style="z-index: 99998 !important;"></div>
      <div class="fixed right-0 top-0 h-full w-64 bg-white shadow-xl" style="z-index: 99999 !important;">
        <div class="flex items-center justify-between p-4 border-b">
          <span class="font-heading text-xl font-bold">Menu</span>
          <button id="mobile-menu-close" class="p-2">
            <Icon name="close" class="h-6 w-6" />
          </button>
        </div>
        <nav class="p-4 space-y-4">
          <a href={getLocalizedUrl("dishes", lang)} class="block font-medium py-2 transition hover:text-primary">{t("buttons.whatToOrder")}</a>
          <a href={`${getLocalizedUrl("", lang)}#must-try`} class="block font-medium py-2 transition hover:text-primary">{t("buttons.myRecommendations")}</a>
          <a href={`${getLocalizedUrl("", lang)}#restaurants`} class="block font-medium py-2 transition hover:text-primary">{t("buttons.myFavoriteSpots")}</a>
          <div class="pt-4 border-t border-gray-200">
            <LanguageSelector currentPath={Astro.url.pathname} client:load />
          </div>
        </nav>
      </div>
    </div>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-20 bg-dark text-dark-foreground">
      <div class="content-grid py-16">
        <div class="grid gap-8 md:grid-cols-4">
          <div>
            <h3 class="font-heading mb-4 text-2xl">{t("site.title")}</h3>
            <p class="text-sm text-dark-foreground/80">
              {t("footer.description")}
            </p>
          </div>

          <div>
            <h4 class="font-heading mb-4 text-lg">{t("footer.explore")}</h4>
            <ul class="space-y-2 text-sm text-dark-foreground/80">
              <li>
                <a href={`${getLocalizedUrl("", lang)}#restaurants`} class="transition hover:text-white"
                  >{t("footer.featuredRestaurants")}</a
                >
              </li>
              <li>
                <a href={`${getLocalizedUrl("", lang)}#map`} class="transition hover:text-white"
                  >{t("footer.interactiveMap")}</a
                >
              </li>
              <li>
                <a href={getLocalizedUrl("dishes", lang)} class="transition hover:text-white"
                  >{t("footer.mustTryDishes")}</a
                >
              </li>
            </ul>
          </div>

          <div>
            <h4 class="font-heading mb-4 text-lg">{t("footer.categories")}</h4>
            <ul class="space-y-2 text-sm text-dark-foreground/80">
              <li>
                <a
                  href={getLocalizedUrl("restaurant/lokal-dlouha", lang)}
                  class="transition hover:text-white">{t("footer.fullRestaurants")}</a
                >
              </li>
              <li>
                <a
                  href={getLocalizedUrl("restaurant/u-cerneho-vola", lang)}
                  class="transition hover:text-white">{t("footer.pubsBeerHalls")}</a
                >
              </li>
              <li>
                <a
                  href={getLocalizedUrl("restaurant/sisters-bistro", lang)}
                  class="transition hover:text-white">{t("footer.bistrosSnacks")}</a
                >
              </li>
              <li>
                <a
                  href={getLocalizedUrl("restaurant/werichova-vila", lang)}
                  class="transition hover:text-white">{t("footer.cafesCulture")}</a
                >
              </li>
              <li>
                <a href="/#map" class="transition hover:text-white"
                  >{t("footer.pragueAttractions")}</a
                >
              </li>
            </ul>
          </div>

          <div>
            <h4 class="font-heading mb-4 text-lg">{t("footer.karelFavorites")}</h4>
            <ul class="space-y-2 text-sm text-dark-foreground/80">
              <li>
                <a href={`${getLocalizedUrl("dishes", lang)}#polivky`} class="transition hover:text-white"
                  >{t("footer.kulajda")}</a
                >
              </li>
              <li>
                <a
                  href={`${getLocalizedUrl("dishes", lang)}#hlavni-jidla`}
                  class="transition hover:text-white"
                  >{t("footer.svickova")}</a
                >
              </li>
              <li>
                <a href={`${getLocalizedUrl("dishes", lang)}#snacks`} class="transition hover:text-white"
                  >{t("footer.chlebicky")}</a
                >
              </li>
              <li>
                <a href={`${getLocalizedUrl("dishes", lang)}#drinks`} class="transition hover:text-white"
                  >{t("footer.kofola")}</a
                >
              </li>
              <li>
                <a href={`${getLocalizedUrl("", lang)}#map`} class="transition hover:text-white"
                  >{t("footer.pragueCastle")}</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div
          class="mt-12 border-t border-dark-foreground/20 pt-8 text-center text-dark-foreground/60"
        >
          <p class="text-sm">{t("footer.copyright").replace("{year}", new Date().getFullYear().toString())}</p>
        </div>
      </div>
    </footer>
    
    <script>
      // Mobile menu functionality
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const mobileMenuBackdrop = document.getElementById('mobile-menu-backdrop');
        
        if (mobileMenuBtn && mobileMenu) {
          mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.remove('hidden');
          });
          
          mobileMenuClose?.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
          });
          
          mobileMenuBackdrop?.addEventListener('click', () => {
            mobileMenu.classList.add('hidden');
          });
          
          // Close menu when clicking on a link
          const menuLinks = mobileMenu.querySelectorAll('a');
          menuLinks.forEach(link => {
            link.addEventListener('click', () => {
              mobileMenu.classList.add('hidden');
            });
          });
        }
      });
    </script>
  </body>
</html>
