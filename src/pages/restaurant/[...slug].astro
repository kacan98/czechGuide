---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

export async function getStaticPaths() {
  const restaurants = await getCollection('restaurants');
  return restaurants.map((restaurant) => ({
    params: { slug: restaurant.slug },
    props: { restaurant },
  }));
}

const { restaurant } = Astro.props;
const data = restaurant.data;

const meta = {
  title: `${data.name} - Karel's Czechia Guide`,
  description: data.description,
  image: data.image,
};

// Function to generate star rating display
const getStarRating = (rating: number) => {
  const fullStars = Math.floor(rating);
  const hasHalfStar = rating % 1 >= 0.5;
  return { fullStars, hasHalfStar };
};

const starInfo = data.googleRating ? getStarRating(data.googleRating) : null;
---

<Layout meta={meta}>
  <div class="content-grid py-8">
    <!-- Back Button -->
    <div class="mb-6">
      <a 
        href="/#restaurants"
        class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition"
      >
        <Icon name="arrow-left" class="w-5 h-5" />
        Back to restaurants
      </a>
    </div>

    <!-- Header with small buttons -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-2">{data.name}</h1>
        <p class="text-lg text-gray-600">{data.description}</p>
      </div>
      
      <div class="flex gap-3">
        {data.website && (
          <a 
            href={data.website}
            target="_blank"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition"
          >
            <Icon name="external" class="w-4 h-4" />
            Website
          </a>
        )}
        
        {(data.googleMapsUrl || data.address) && (
          <a 
            href={data.googleMapsUrl || `https://maps.google.com/?q=${encodeURIComponent(data.address)}`}
            target="_blank"
            class="inline-flex items-center gap-2 px-4 py-2 bg-secondary text-secondary-foreground rounded-lg hover:bg-secondary/90 transition"
          >
            <Icon name="map" class="w-4 h-4" />
            Directions
          </a>
        )}
      </div>
    </div>

    <!-- Main Image -->
    {data.image && (
      <div class="mb-8">
        <img 
          src={data.image} 
          alt={data.name}
          class="w-full h-80 object-cover rounded-xl shadow-lg"
        />
      </div>
    )}

    <!-- Google Reviews -->
    {starInfo && (
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8 text-center">
        <h2 class="text-2xl font-heading font-bold mb-4">Google Reviews</h2>
        
        <!-- Star Rating -->
        <div class="flex items-center justify-center gap-2 mb-4">
          <div class="flex items-center gap-1">
            {Array.from({ length: starInfo.fullStars }).map(() => (
              <Icon name="heart" class="w-6 h-6 text-yellow-400 fill-current" />
            ))}
            {starInfo.hasHalfStar && (
              <Icon name="heart" class="w-6 h-6 text-yellow-400 fill-current opacity-50" />
            )}
          </div>
          <span class="text-3xl font-bold text-gray-900">{data.googleRating}</span>
          <span class="text-gray-600">({data.googleReviews} reviews)</span>
        </div>

        <a 
          href={data.googleMapsUrl || `https://maps.google.com/?q=${encodeURIComponent(data.address)}`}
          target="_blank"
          class="inline-flex items-center gap-2 text-primary hover:text-primary/80 font-medium"
        >
          Read all reviews on Google Maps
          <Icon name="external" class="w-4 h-4" />
        </a>
      </div>
    )}

    <!-- Quick Info -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <!-- Phone -->
      {data.phone && (
        <div class="bg-white rounded-xl shadow-lg p-6 text-center">
          <Icon name="phone" class="w-8 h-8 text-primary mx-auto mb-3" />
          <h3 class="font-heading text-lg font-semibold mb-2">Call Ahead</h3>
          <a href={`tel:${data.phone}`} class="text-primary hover:text-primary/80">
            {data.phone}
          </a>
        </div>
      )}

      <!-- Cuisine -->
      <div class="bg-white rounded-xl shadow-lg p-6 text-center">
        <Icon name="food" class="w-8 h-8 text-primary mx-auto mb-3" />
        <h3 class="font-heading text-lg font-semibold mb-2">What They Do</h3>
        <p class="text-gray-600">{data.cuisine}</p>
      </div>
    </div>

    <!-- What to Try -->
    {data.recommended && data.recommended.length > 0 && (
      <div class="mb-8">
        <h2 class="text-2xl font-heading font-bold mb-6 text-center">What to Try</h2>
        <div class="grid md:grid-cols-2 gap-4">
          {data.recommended.slice(0, 4).map((dish) => (
            <div class="bg-white rounded-lg p-4 shadow border-l-4 border-primary">
              <h3 class="font-semibold text-lg mb-1">{dish.name}</h3>
              <p class="text-gray-600 text-sm">{dish.description}</p>
            </div>
          ))}
        </div>
      </div>
    )}

  </div>
</Layout>